{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "paths": {
      "@migrations": ["migrations"],
      "@migrations/*": ["migrations/*"],
      "@entities": ["entities"],
      "@entities/*": ["entities/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@config": ["config"],
      "@config/*": ["config/*"]
    }
  }
}

